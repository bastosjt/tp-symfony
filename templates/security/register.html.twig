{% extends 'base.html.twig' %}

{% block title %}Inscription - Linkr{% endblock %}

{% block body %}
<div class="min-h-screen bg-linear-to-br from-gray-50 via-white to-gray-50">
    {# Contenu principal #}
    <main class="flex items-center justify-center min-h-screen py-16 px-4 sm:px-6 lg:px-8">
        <div class="w-full max-w-lg">
            <div class="bg-white rounded-2xl border border-gray-100 shadow-lg shadow-gray-200/50 p-8">
                        <h1 class="text-3xl font-extrabold text-gray-900 mb-2 tracking-tight">Créer un compte</h1>
                        <p class="text-gray-600 text-sm mb-8">Rejoignez la communauté Linkr</p>

                        {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}
                            <div>
                                {{ form_label(registrationForm.firstName, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
                                {{ form_widget(registrationForm.firstName) }}
                                {{ form_errors(registrationForm.firstName) }}
                            </div>

                            <div>
                                {{ form_label(registrationForm.lastName, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
                                {{ form_widget(registrationForm.lastName) }}
                                {{ form_errors(registrationForm.lastName) }}
                            </div>

                            <div>
                                {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
                                {{ form_widget(registrationForm.email) }}
                                {{ form_errors(registrationForm.email) }}
                            </div>

                            <div>
                                {{ form_label(registrationForm.plainPassword.first, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
                                {{ form_widget(registrationForm.plainPassword.first) }}
                                {{ form_errors(registrationForm.plainPassword.first) }}
                            </div>

                            <div>
                                {{ form_label(registrationForm.plainPassword.second, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
                                {{ form_widget(registrationForm.plainPassword.second) }}
                                {{ form_errors(registrationForm.plainPassword.second) }}
                            </div>

                            <button 
                                type="submit" 
                                class="w-full px-8 py-3 bg-gradient-to-r from-slate-900 via-indigo-900 to-slate-900 text-white font-semibold rounded-full text-sm tracking-wide shadow-lg shadow-indigo-900/25 hover:shadow-xl hover:shadow-indigo-900/35 transition-all duration-300 hover:scale-105"
                            >
                                Créer mon compte
                            </button>
                        {{ form_end(registrationForm) }}

                        <div class="mt-6 text-center">
                            <p class="text-sm text-gray-600">
                                Déjà un compte ? 
                                <a href="{{ path('app_login') }}" class="font-semibold text-indigo-600 hover:text-indigo-700 transition-colors">
                                    Se connecter
                                </a>
                            </p>
                        </div>
            </div>
        </div>
    </main>
</div>
{% endblock %}
