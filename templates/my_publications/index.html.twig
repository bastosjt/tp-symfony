{% extends 'base.html.twig' %}

{% block title %}Mes publications - Linkr{% endblock %}

{% block body %}
<div class="min-h-screen bg-linear-to-br from-gray-50 via-white to-gray-50">
    {% include 'components/header.html.twig' %}

    <main class="pt-24 pb-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="max-w-2xl mx-auto">
                <div class="mb-8 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                    <div>
                        <h1 class="text-3xl font-extrabold text-gray-900 tracking-tight">Mes publications</h1>
                        <p class="text-gray-600 text-sm mt-2">{{ publications|length }} publication(s)</p>
                    </div>
                    <a href="{{ path('app_publication_new') }}" class="inline-block px-6 py-2.5 bg-linear-to-r from-slate-900 via-indigo-900 to-slate-900 text-white font-semibold rounded-full text-sm tracking-wide shadow-lg shadow-indigo-900/25 hover:shadow-xl hover:shadow-indigo-900/35 transition-all duration-300 hover:scale-105 shrink-0">
                        Nouvelle publication
                    </a>
                </div>

                <div class="space-y-8">
                    {% for publication in publications %}
                        <div>
                            {% include 'components/publication.html.twig' with {'publication': publication} only %}
                            <div class="mt-3 flex flex-wrap gap-3 pl-1">
                                <a href="{{ path('app_publication_show', { id: publication.id }) }}" class="text-sm font-semibold text-indigo-600 hover:text-indigo-700 transition-colors">Voir</a>
                                <a href="{{ path('app_publication_edit', { id: publication.id }) }}" class="text-sm font-semibold text-gray-700 hover:text-gray-900 transition-colors">Modifier</a>
                                {{ include('publication/_delete_form.html.twig', { publication: publication }) }}
                            </div>
                        </div>
                    {% else %}
                        <div class="bg-white rounded-2xl border border-gray-100 shadow-lg shadow-gray-200/50 p-8 text-center">
                            <p class="text-gray-600 mb-6">Vous n'avez pas encore de publication.</p>
                            <div class="flex flex-wrap justify-center gap-3">
                                <a href="{{ path('app_publication_new') }}" class="inline-block px-6 py-2.5 bg-linear-to-r from-slate-900 via-indigo-900 to-slate-900 text-white font-semibold rounded-full text-sm tracking-wide shadow-lg shadow-indigo-900/25 hover:shadow-xl hover:shadow-indigo-900/35 transition-all duration-300">
                                    Nouvelle publication
                                </a>
                                <a href="{{ path('app_home') }}" class="inline-block px-6 py-2.5 bg-gray-100 text-gray-700 font-semibold rounded-full text-sm tracking-wide hover:bg-gray-200 transition-all duration-300">
                                    Retour Ã  l'accueil
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </main>

    {% include 'components/footer.html.twig' %}
</div>
{% endblock %}
