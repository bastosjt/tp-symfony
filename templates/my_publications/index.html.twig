{% extends 'base.html.twig' %}

{% block title %}Mes publications - Linkr{% endblock %}

{% block body %}
<div class="min-h-screen bg-linear-to-br from-gray-50 via-white to-gray-50">
    {% include 'components/header.html.twig' %}

    <main class="pt-24 pb-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="max-w-2xl mx-auto">
                <div class="mb-8">
                    <h1 class="text-3xl font-extrabold text-gray-900 tracking-tight">Mes publications</h1>
                    <p class="text-gray-600 text-sm mt-2">{{ publications|length }} publication(s)</p>
                </div>

                <div class="space-y-8">
                    {% for publication in publications %}
                        {% include 'components/publication.html.twig' with {'publication': publication} only %}
                    {% else %}
                        <div class="bg-white rounded-2xl border border-gray-100 shadow-lg shadow-gray-200/50 p-8 text-center">
                            <p class="text-gray-600 mb-6">Vous n'avez pas encore de publication.</p>
                            <a href="{{ path('app_home') }}" class="inline-block px-6 py-2.5 bg-gray-100 text-gray-700 font-semibold rounded-full text-sm tracking-wide hover:bg-gray-200 transition-all duration-300">
                                Retour Ã  l'accueil
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </main>

    {% include 'components/footer.html.twig' %}
</div>
{% endblock %}
