<header class="fixed top-0 left-0 right-0 bg-white/80 backdrop-blur-xl border-b border-gray-200/50 z-50 shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-20">
            {# Logo Linkr à gauche avec effet premium #}
            <div class="shrink-0">
                <h1 class="text-3xl font-extrabold tracking-tight bg-linear-to-r from-slate-900 via-indigo-900 to-slate-900 bg-clip-text text-transparent">
                    Linkr
                </h1>
            </div>

            <nav class="hidden md:flex items-center space-x-10 flex-1 justify-center">
                <a href="#" class="relative text-gray-700 hover:text-gray-900 font-medium text-sm tracking-wide transition-all duration-300 group">
                    Accueil
                    <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-linear-to-r from-slate-900 to-indigo-900 group-hover:w-full transition-all duration-300"></span>
                </a>
                <a href="#" class="relative text-gray-700 hover:text-gray-900 font-medium text-sm tracking-wide transition-all duration-300 group">
                    Explorer
                    <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-linear-to-r from-slate-900 to-indigo-900 group-hover:w-full transition-all duration-300"></span>
                </a>
                <a href="#" class="relative text-gray-700 hover:text-gray-900 font-medium text-sm tracking-wide transition-all duration-300 group">
                    Mes publications
                    <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-linear-to-r from-slate-900 to-indigo-900 group-hover:w-full transition-all duration-300"></span>
                </a>
            </nav>

            <div class="shrink-0">
                {% if not app.user %}
                    <a href="{{ path('app_login') }}" class="inline-block px-8 py-2.5 bg-linear-to-r from-slate-900 via-indigo-900 to-slate-900 text-white font-semibold rounded-full text-sm tracking-wide shadow-lg shadow-indigo-900/25 hover:shadow-xl hover:shadow-indigo-900/35 transition-all duration-300 hover:scale-105">
                        Se connecter
                    </a>
                {% else %}
                    <div class="flex items-center space-x-4">
                        <span class="text-sm text-gray-700 font-medium">
                            {{ app.user.firstName }} {{ app.user.lastName }}
                        </span>

                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="/admin" class="inline-block px-6 py-2 bg-indigo-600 text-white font-semibold rounded-full text-sm tracking-wide hover:bg-indigo-700 transition-all duration-300">
                                Panel Admin
                            </a>
                        {% elseif is_granted('ROLE_BANNED') %}
                            <span class="px-3 py-1 bg-red-100 text-red-700 text-xs font-semibold rounded-full">
                                Compte banni
                            </span>
                        {% else %}
                            <a href="/profile" class="inline-block px-6 py-2 bg-gray-100 text-gray-700 font-semibold rounded-full text-sm tracking-wide hover:bg-gray-200 transition-all duration-300">
                                Mon profil
                            </a>
                        {% endif %}

                        <a href="{{ path('app_logout') }}" class="inline-block px-6 py-2 bg-gray-100 text-gray-700 font-semibold rounded-full text-sm tracking-wide hover:bg-gray-200 transition-all duration-300">
                            Déconnexion
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</header>
