{# Composant Publication - Accepte publication et optionnellement show_actions (pour Mes publications) #}
<article class="group relative bg-white rounded-2xl border border-gray-100 shadow-sm overflow-hidden backdrop-blur-sm">
    {# Boutons d'action CRUD - style pro, couleurs distinctes, icônes claires #}
    {% if show_actions|default(false) %}
        <div class="absolute top-3 right-3 flex gap-2 z-10">
            <a href="{{ path('app_publication_show', { id: publication.id }) }}" title="Voir" class="inline-flex items-center justify-center gap-1.5 px-3 py-2 rounded-xl bg-indigo-500 text-white text-sm font-semibold shadow-md shadow-indigo-500/30 hover:bg-indigo-600 hover:shadow-lg hover:shadow-indigo-500/40 hover:scale-105 transition-all duration-200">
                <svg class="w-5 h-5 shrink-0" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/></svg>
                <span class="hidden sm:inline">Voir</span>
            </a>
            <a href="{{ path('app_publication_edit', { id: publication.id }) }}" title="Modifier" class="inline-flex items-center justify-center gap-1.5 px-3 py-2 rounded-xl bg-amber-500 text-white text-sm font-semibold shadow-md shadow-amber-500/30 hover:bg-amber-600 hover:shadow-lg hover:shadow-amber-500/40 hover:scale-105 transition-all duration-200">
                <svg class="w-5 h-5 shrink-0" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/></svg>
                <span class="hidden sm:inline">Modifier</span>
            </a>
            <form method="post" action="{{ path('app_publication_delete', { id: publication.id }) }}" onsubmit="return confirm('Supprimer cette publication ?');" class="inline">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ publication.id) }}">
                <button type="submit" title="Supprimer" class="inline-flex items-center justify-center gap-1.5 px-3 py-2 rounded-xl bg-red-500 text-white text-sm font-semibold shadow-md shadow-red-500/30 hover:bg-red-600 hover:shadow-lg hover:shadow-red-500/40 hover:scale-105 transition-all duration-200 cursor-pointer">
                    <svg class="w-5 h-5 shrink-0" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/></svg>
                    <span class="hidden sm:inline">Supprimer</span>
                </button>
            </form>
        </div>
    {% endif %}
    {# En-tête de la carte #}
    <div class="p-6 flex items-center space-x-4 border-b border-gray-50">
        <div class="relative">
            <div class="w-11 h-11 rounded-full bg-blue-500 flex items-center justify-center text-white font-bold text-xs shadow-md shadow-blue-500/20 ring-2 ring-white">
                {% set author = publication.author %}
                {% if author %}
                    {{ author.firstName|slice(0, 1)|upper }}{{ author.lastName|slice(0, 1)|upper }}
                {% else %}
                    ??
                {% endif %}
            </div>
            <div class="absolute -bottom-0.5 -right-0.5 w-3.5 h-3.5 bg-green-500 rounded-full border-2 border-white"></div>
        </div>
        <div class="flex-1 min-w-0">
            <h3 class="font-bold text-gray-900 text-base tracking-tight">
                {% if publication.author %}
                    {{ publication.author.firstName }} {{ publication.author.lastName }}
                {% else %}
                    Utilisateur
                {% endif %}
            </h3>
            <p class="text-xs text-gray-500 font-medium mt-0.5">
                {% set now = date('now') %}
                {% set diff = date(publication.createdAt).diff(now) %}
                {% if diff.days > 0 %}
                    {% if diff.days == 1 %}
                        Il y a 1 jour
                    {% else %}
                        Il y a {{ diff.days }} jours
                    {% endif %}
                {% elseif diff.h > 0 %}
                    {% if diff.h == 1 %}
                        Il y a 1 heure
                    {% else %}
                        Il y a {{ diff.h }} heures
                    {% endif %}
                {% elseif diff.i > 0 %}
                    {% if diff.i == 1 %}
                        Il y a 1 minute
                    {% else %}
                        Il y a {{ diff.i }} minutes
                    {% endif %}
                {% else %}
                    À l'instant
                {% endif %}
            </p>
        </div>
    </div>

    {# Contenu textuel #}
    <div class="px-6 py-5">
        <p class="text-gray-800 leading-relaxed text-[15px] font-normal tracking-wide">
            {{ publication.content }}
        </p>
    </div>

    {# Tags #}
    <div class="px-6 pb-5 flex flex-wrap gap-2.5">
        {% for tag in publication.tags %}
            <span class="px-3 py-1 bg-blue-100 text-blue-700 rounded-md text-xs font-medium border border-blue-200 cursor-pointer">
                #{{ tag.name }}
            </span>
        {% endfor %}
    </div>

    {# Barre d'actions #}
    <div class="px-6 py-4 border-t border-gray-50 bg-gray-50/50 flex items-center space-x-8">
        <button class="group/btn flex items-center space-x-2.5 text-gray-600">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
            </svg>
            <span class="text-sm font-semibold">
                {{ publication.reactions|filter(r => r.type == 'like')|length }}
            </span>
        </button>
        <button class="group/btn flex items-center space-x-2.5 text-gray-600">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
            <span class="text-sm font-semibold">
                {{ publication.commentaires|length }}
            </span>
        </button>
    </div>
</article>
