<form method="post" action="{{ path('app_publication_delete', { id: publication.id }) }}" onsubmit="return confirm('Supprimer cette publication ?');" class="inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ publication.id) }}">
    <button type="submit" class="inline-block px-6 py-2.5 bg-red-50 text-red-700 font-semibold rounded-full text-sm tracking-wide hover:bg-red-100 transition-all duration-300 border border-red-200">
        Supprimer
    </button>
</form>
