{% extends 'base.html.twig' %}

{% block title %}{{ publication.title }} - Linkr{% endblock %}

{% block body %}
<div class="min-h-screen bg-linear-to-br from-gray-50 via-white to-gray-50">
    {% include 'components/header.html.twig' %}

    <main class="pt-24 pb-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="max-w-2xl mx-auto">
                <div class="bg-white rounded-2xl border border-gray-100 shadow-lg shadow-gray-200/50 p-8">
                    <h1 class="text-3xl font-extrabold text-gray-900 mb-2 tracking-tight">{{ publication.title }}</h1>
                    <p class="text-gray-500 text-sm mb-6">
                        {{ publication.createdAt|date('d/m/Y à H:i') }}
                        {% if publication.updatedAt != publication.createdAt %}
                            · Modifiée le {{ publication.updatedAt|date('d/m/Y à H:i') }}
                        {% endif %}
                    </p>

                    <div class="prose prose-gray max-w-none mb-6">
                        <p class="text-gray-800 leading-relaxed whitespace-pre-wrap">{{ publication.content }}</p>
                    </div>

                    {% if publication.tags|length > 0 %}
                        <div class="flex flex-wrap gap-2.5 mb-6">
                            {% for tag in publication.tags %}
                                <span class="px-3 py-1 bg-blue-100 text-blue-700 rounded-md text-xs font-medium border border-blue-200">#{{ tag.name }}</span>
                            {% endfor %}
                        </div>
                    {% endif %}

                    <div class="pt-6 border-t border-gray-100 flex flex-wrap gap-3">
                        <a href="{{ path('app_publication_edit', { id: publication.id }) }}" class="inline-block px-6 py-2.5 bg-gray-100 text-gray-700 font-semibold rounded-full text-sm tracking-wide hover:bg-gray-200 transition-all duration-300">
                            Modifier
                        </a>
                        <a href="{{ path('app_my_publications') }}" class="inline-block px-6 py-2.5 text-indigo-600 font-semibold text-sm hover:text-indigo-700 transition-colors">
                            ← Retour à mes publications
                        </a>
                        {{ include('publication/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </main>

    {% include 'components/footer.html.twig' %}
</div>
{% endblock %}
