{{ form_start(form, { attr: { class: 'space-y-6' } }) }}
    <div>
        {{ form_label(form.title, null, { label_attr: { class: 'block text-sm font-semibold text-gray-700 mb-2' } }) }}
        {{ form_widget(form.title) }}
        {{ form_errors(form.title) }}
    </div>
    <div>
        {{ form_label(form.content, null, { label_attr: { class: 'block text-sm font-semibold text-gray-700 mb-2' } }) }}
        {{ form_widget(form.content) }}
        {{ form_errors(form.content) }}
    </div>
    <div>
        {{ form_label(form.tags, null, { label_attr: { class: 'block text-sm font-semibold text-gray-700 mb-2' } }) }}
        <div class="flex flex-wrap gap-2">
            {% for child in form.tags %}
                <label class="inline-flex items-center gap-2 px-4 py-2 rounded-xl border-2 border-gray-200 bg-white text-gray-700 cursor-pointer hover:border-indigo-400 hover:bg-indigo-50/50 transition-all duration-200 has-[:checked]:border-indigo-500 has-[:checked]:bg-indigo-100 has-[:checked]:text-indigo-800">
                    {{ form_widget(child) }}
                    <span>{{ child.vars.label }}</span>
                </label>
            {% endfor %}
        </div>
        {{ form_errors(form.tags) }}
    </div>
    <button type="submit" class="w-full px-8 py-3 bg-linear-to-r from-slate-900 via-indigo-900 to-slate-900 text-white font-semibold rounded-full text-sm tracking-wide shadow-lg shadow-indigo-900/25 hover:shadow-xl hover:shadow-indigo-900/35 transition-all duration-300 hover:scale-105">
        {{ button_label|default('Enregistrer') }}
    </button>
{{ form_end(form) }}
