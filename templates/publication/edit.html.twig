{% extends 'base.html.twig' %}

{% block title %}Modifier la publication - Linkr{% endblock %}

{% block body %}
<div class="min-h-screen bg-linear-to-br from-gray-50 via-white to-gray-50">
    {% include 'components/header.html.twig' %}

    <main class="pt-24 pb-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="max-w-2xl mx-auto">
                <div class="bg-white rounded-2xl border border-gray-100 shadow-lg shadow-gray-200/50 p-8">
                    <h1 class="text-3xl font-extrabold text-gray-900 mb-2 tracking-tight">Modifier la publication</h1>
                    <p class="text-gray-600 text-sm mb-8">{{ publication.title }}</p>

                    {{ include('publication/_form.html.twig', { button_label: 'Enregistrer' }) }}

                    <div class="mt-6 flex flex-col sm:flex-row gap-3">
                        <a href="{{ path('app_my_publications') }}" class="text-sm font-semibold text-indigo-600 hover:text-indigo-700 transition-colors">
                            ← Retour à mes publications
                        </a>
                        {{ include('publication/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </main>

    {% include 'components/footer.html.twig' %}
</div>
{% endblock %}
