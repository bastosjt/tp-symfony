{% extends 'base.html.twig' %}

{% block title %}Panel Admin - Linkr{% endblock %}

{% block body %}
<div class="min-h-screen bg-linear-to-br from-gray-50 via-white to-gray-50">
    {% include 'components/header.html.twig' %}

    <main class="pt-24 pb-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="max-w-4xl mx-auto">
                <div class="bg-white rounded-2xl border border-gray-100 shadow-lg shadow-gray-200/50 p-8">
                    <h1 class="text-3xl font-extrabold text-gray-900 mb-2 tracking-tight">Panel Admin</h1>
                    <p class="text-gray-600 text-sm mb-8">Gestion de la plateforme Linkr</p>

                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-8">
                        <div class="p-4 bg-gray-50 rounded-xl border border-gray-100">
                            <p class="text-sm font-semibold text-gray-500">Utilisateurs</p>
                            <p class="text-2xl font-extrabold text-gray-900">{{ users|length }}</p>
                        </div>
                        <div class="p-4 bg-gray-50 rounded-xl border border-gray-100">
                            <p class="text-sm font-semibold text-gray-500">Publications</p>
                            <p class="text-2xl font-extrabold text-gray-900">{{ totalPublications }}</p>
                        </div>
                    </div>

                    <h2 class="text-xl font-bold text-gray-900 mb-4">Liste des utilisateurs</h2>
                    <div class="overflow-x-auto rounded-xl border border-gray-200">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th scope="col" class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Nom</th>
                                    <th scope="col" class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Email</th>
                                    <th scope="col" class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Rôle</th>
                                    <th scope="col" class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Inscrit le</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                {% for u in users %}
                                <tr class="hover:bg-gray-50 transition-colors">
                                    <td class="px-4 py-3 text-sm font-medium text-gray-900">{{ u.firstName }} {{ u.lastName }}</td>
                                    <td class="px-4 py-3 text-sm text-gray-600">{{ u.email }}</td>
                                    <td class="px-4 py-3">
                                        {% if 'ROLE_ADMIN' in u.roles %}
                                            <span class="px-2 py-1 text-xs font-semibold rounded-full bg-indigo-100 text-indigo-800">Admin</span>
                                        {% elseif 'ROLE_BANNED' in u.roles %}
                                            <span class="px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">Banni</span>
                                        {% else %}
                                            <span class="px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-700">User</span>
                                        {% endif %}
                                    </td>
                                    <td class="px-4 py-3 text-sm text-gray-500">{{ u.createdAt|date('d/m/Y') }}</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    <div class="mt-8 pt-6 border-t border-gray-100">
                        <a href="{{ path('app_home') }}" class="inline-block px-6 py-2.5 bg-gray-100 text-gray-700 font-semibold rounded-full text-sm tracking-wide hover:bg-gray-200 transition-all duration-300">
                            Retour à l'accueil
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </main>

    {% include 'components/footer.html.twig' %}
</div>
{% endblock %}
