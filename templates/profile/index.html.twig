{% extends 'base.html.twig' %}

{% block title %}Mon profil - Linkr{% endblock %}

{% block body %}
<div class="min-h-screen bg-linear-to-br from-gray-50 via-white to-gray-50">
    {% include 'components/header.html.twig' %}

    <main class="pt-24 pb-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="max-w-2xl mx-auto">
                <div class="bg-white rounded-2xl border border-gray-100 shadow-lg shadow-gray-200/50 p-8">
                    <h1 class="text-3xl font-extrabold text-gray-900 mb-2 tracking-tight">Mon profil</h1>
                    <p class="text-gray-600 text-sm mb-8">Vos informations de compte Linkr</p>

                    <div class="space-y-6">
                        <div>
                            <span class="block text-sm font-semibold text-gray-500 mb-1">Prénom</span>
                            <p class="text-gray-900 font-medium">{{ user.firstName }}</p>
                        </div>
                        <div>
                            <span class="block text-sm font-semibold text-gray-500 mb-1">Nom</span>
                            <p class="text-gray-900 font-medium">{{ user.lastName }}</p>
                        </div>
                        <div>
                            <span class="block text-sm font-semibold text-gray-500 mb-1">Email</span>
                            <p class="text-gray-900 font-medium">{{ user.email }}</p>
                        </div>
                        <div>
                            <span class="block text-sm font-semibold text-gray-500 mb-1">Membre depuis</span>
                            <p class="text-gray-900 font-medium">{{ user.createdAt|date('d/m/Y') }}</p>
                        </div>
                        <div>
                            <span class="block text-sm font-semibold text-gray-500 mb-1">Publications</span>
                            <p class="text-gray-900 font-medium">{{ user.publications|length }} publication(s)</p>
                        </div>
                    </div>

                    <div class="mt-8 pt-6 border-t border-gray-100 flex flex-col sm:flex-row gap-3">
                        <a href="{{ path('app_home') }}" class="inline-block px-6 py-2.5 bg-gray-100 text-gray-700 font-semibold rounded-full text-sm tracking-wide hover:bg-gray-200 transition-all duration-300 text-center">
                            Retour à l'accueil
                        </a>
                        <a href="{{ path('app_forgot_password_request') }}" class="inline-block px-6 py-2.5 text-indigo-600 font-semibold text-sm hover:text-indigo-700 transition-colors text-center">
                            Modifier mon mot de passe
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </main>

    {% include 'components/footer.html.twig' %}
</div>
{% endblock %}
