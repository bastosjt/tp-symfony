{% extends 'base.html.twig' %}

{% block title %}Linkr - Accueil{% endblock %}

{% block body %}
<div class="min-h-screen bg-linear-to-br from-gray-50 via-white to-gray-50">
    {# Header #}
    {% include 'components/header.html.twig' %}

    {# Contenu principal avec padding-top pour le header fixe #}
    <main class="pt-24 pb-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex gap-10 justify-center">
                {# Feed principal centré #}
                <div class="flex-1 max-w-2xl">
                    <div class="space-y-8 mt-4">
                        {# Publications dynamiques #}
                        {% for publication in publications %}
                            {% include 'components/publication.html.twig' with publication only %}
                        {% endfor %}
                        
                        {# CTA pour voir plus de publications #}
                        {% if hasMorePublications %}
                            <div class="relative rounded-2xl overflow-hidden">
                                {# Dégradé qui se fond avec le background #}
                                <div class="bg-linear-to-b from-white via-gray-50/50 to-transparent py-16 px-6 text-center">
                                    <p class="text-gray-600 text-sm mb-6 font-medium">
                                        Il y a encore plus de publications à découvrir
                                    </p>
                                    <a href="/login" class="inline-block px-8 py-3 bg-linear-to-r from-slate-900 via-indigo-900 to-slate-900 text-white font-semibold rounded-full text-sm tracking-wide shadow-lg shadow-indigo-900/25 hover:shadow-xl hover:shadow-indigo-900/35 transition-all duration-300 hover:scale-105">
                                        Se connecter pour voir plus
                                    </a>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>

                {# Sidebar à droite - Suggestions de profils avec style premium #}
                <aside class="hidden lg:block w-80 shrink-0 mt-4">
                    <div class="bg-white/80 backdrop-blur-xl rounded-2xl border border-gray-100 shadow-lg shadow-gray-200/50 p-6 sticky top-24">
                        <h2 class="text-lg font-bold text-gray-900 mb-6 tracking-tight">Suggestions</h2>
                        <div class="space-y-5">
                            {# Profil suggéré 1 #}
                            <div class="flex items-center justify-between group/item p-2 -mx-2 rounded-xl hover:bg-gray-50/50 transition-all duration-300">
                                <div class="flex items-center space-x-3 flex-1 min-w-0">
                                    <div class="relative shrink-0">
                                        <div class="w-11 h-11 rounded-full bg-linear-to-br from-orange-500 via-red-500 to-orange-600 flex items-center justify-center text-white font-bold text-xs shadow-md shadow-orange-500/20 ring-2 ring-white">
                                            AB
                                        </div>
                                        <div class="absolute -bottom-0.5 -right-0.5 w-3.5 h-3.5 bg-green-500 rounded-full border-2 border-white"></div>
                                    </div>
                                    <div class="flex-1 min-w-0">
                                        <h3 class="font-bold text-sm text-gray-900 truncate">Alex Bernard</h3>
                                        <p class="text-xs text-gray-500 font-medium truncate">@alexb</p>
                                    </div>
                                </div>
                                <button class="px-4 py-1.5 text-gray-700 hover:text-white hover:bg-linear-to-r hover:from-slate-900 hover:to-indigo-900 font-semibold text-xs rounded-full border border-gray-300 hover:border-transparent transition-all duration-300 hover:scale-105 shrink-0 ml-2">
                                    Suivre
                                </button>
                            </div>

                            {# Profil suggéré 2 #}
                            <div class="flex items-center justify-between group/item p-2 -mx-2 rounded-xl hover:bg-gray-50/50 transition-all duration-300">
                                <div class="flex items-center space-x-3 flex-1 min-w-0">
                                    <div class="relative shrink-0">
                                        <div class="w-11 h-11 rounded-full bg-linear-to-br from-yellow-500 via-orange-500 to-yellow-600 flex items-center justify-center text-white font-bold text-xs shadow-md shadow-yellow-500/20 ring-2 ring-white">
                                            CM
                                        </div>
                                        <div class="absolute -bottom-0.5 -right-0.5 w-3.5 h-3.5 bg-green-500 rounded-full border-2 border-white"></div>
                                    </div>
                                    <div class="flex-1 min-w-0">
                                        <h3 class="font-bold text-sm text-gray-900 truncate">Claire Moreau</h3>
                                        <p class="text-xs text-gray-500 font-medium truncate">@clairem</p>
                                    </div>
                                </div>
                                <button class="px-4 py-1.5 text-gray-700 hover:text-white hover:bg-linear-to-r hover:from-slate-900 hover:to-indigo-900 font-semibold text-xs rounded-full border border-gray-300 hover:border-transparent transition-all duration-300 hover:scale-105 shrink-0 ml-2">
                                    Suivre
                                </button>
                            </div>

                            {# Profil suggéré 3 #}
                            <div class="flex items-center justify-between group/item p-2 -mx-2 rounded-xl hover:bg-gray-50/50 transition-all duration-300">
                                <div class="flex items-center space-x-3 flex-1 min-w-0">
                                    <div class="relative shrink-0">
                                        <div class="w-11 h-11 rounded-full bg-linear-to-br from-violet-500 via-purple-500 to-violet-600 flex items-center justify-center text-white font-bold text-xs shadow-md shadow-violet-500/20 ring-2 ring-white">
                                            TP
                                        </div>
                                        <div class="absolute -bottom-0.5 -right-0.5 w-3.5 h-3.5 bg-green-500 rounded-full border-2 border-white"></div>
                                    </div>
                                    <div class="flex-1 min-w-0">
                                        <h3 class="font-bold text-sm text-gray-900 truncate">Thomas Petit</h3>
                                        <p class="text-xs text-gray-500 font-medium truncate">@thomasp</p>
                                    </div>
                                </div>
                                <button class="px-4 py-1.5 text-gray-700 hover:text-white hover:bg-linear-to-r hover:from-slate-900 hover:to-indigo-900 font-semibold text-xs rounded-full border border-gray-300 hover:border-transparent transition-all duration-300 hover:scale-105 shrink-0 ml-2">
                                    Suivre
                                </button>
                            </div>

                            {# Profil suggéré 4 #}
                            <div class="flex items-center justify-between group/item p-2 -mx-2 rounded-xl hover:bg-gray-50/50 transition-all duration-300">
                                <div class="flex items-center space-x-3 flex-1 min-w-0">
                                    <div class="relative shrink-0">
                                        <div class="w-11 h-11 rounded-full bg-linear-to-br from-rose-500 via-pink-500 to-rose-600 flex items-center justify-center text-white font-bold text-xs shadow-md shadow-rose-500/20 ring-2 ring-white">
                                            EL
                                        </div>
                                        <div class="absolute -bottom-0.5 -right-0.5 w-3.5 h-3.5 bg-green-500 rounded-full border-2 border-white"></div>
                                    </div>
                                    <div class="flex-1 min-w-0">
                                        <h3 class="font-bold text-sm text-gray-900 truncate">Emma Laurent</h3>
                                        <p class="text-xs text-gray-500 font-medium truncate">@emmal</p>
                                    </div>
                                </div>
                                <button class="px-4 py-1.5 text-gray-700 hover:text-white hover:bg-linear-to-r hover:from-slate-900 hover:to-indigo-900 font-semibold text-xs rounded-full border border-gray-300 hover:border-transparent transition-all duration-300 hover:scale-105 shrink-0 ml-2">
                                    Suivre
                                </button>
                            </div>
                        </div>
                    </div>
                </aside>
            </div>
        </div>
    </main>

    {# Footer #}
    {% include 'components/footer.html.twig' %}
</div>
{% endblock %}
